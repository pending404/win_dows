    <script>
        // Function to generate a random Canva Pro ID
        function generateCanvaId() {
            const prefixes = ['CANPRO', 'CVAPRO', 'DESIGN', 'CREATV', 'GRAPHX', 'MASTER'];
            const suffix = Math.floor(100000 + Math.random() * 900000);
            const randomPrefix = prefixes[Math.floor(Math.random() * prefixes.length)];
            return `${randomPrefix}-${suffix}-PRO`;
        }

        // Generate ID when page loads
        document.addEventListener('DOMContentLoaded', function() {
            const generatedId = generateCanvaId();
            document.getElementById('generatedId').innerHTML = `
                <strong>Your Canva Pro Activation ID:</strong><br>
                <span style="color: #00ffcc; font-size: 22px;">${generatedId}</span><br><br>
                <small>Lifetime validity | One-time use</small>
            `;
        });
    </script>
